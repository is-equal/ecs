{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "stripInternal": true,
    "baseUrl": "./",
    "paths": {
      "@equal/ecs": ["packages/ecs/src"],
      "@equal/data-structures": ["packages/data-structures/src"]
    }
  },
  "include": ["**/*"],
  "exclude": ["**/lib", "**/dist", "**/node_modules"]
}
